<html>
  <head>
    <title>Latest Post - eroyx</title>
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "ItemList",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": "{{ forloop.index }}",
          {% for post in site.posts limit:4 %}
          "item": {
            "@type": "Movie",
            "url": "{{ post.url }}",
            "name": "{{ post.title }}",
            "image": "{{ post.featured_image }}",
            "dateCreated": "{{ post.date }}",
            "director": {
                "@type": "Person",
                "name": "{{ post.director }}"
              },
            "review": {
              "@type": "Review",
              "reviewRating": {
                "@type": "Rating",
                "ratingValue": "{{ post.rating }}"
              },
              "author": {
                "@type": "Person",
                "name": "{{ page.author }}"
              },
              "reviewBody": "{{ post.excerpt }}"
              },
              "aggregateRating": {
                "@type": "AggregateRating",
                "ratingValue": "90",
                "bestRating": "100",
                "ratingCount": "19141"
              }
            }
          },
        {% endfor %}
      ]
    }
    </script>
  </head>
  <body>
  </body>
</html>
